{
  "compilerOptions": {
    "outDir": "dist",
    "incremental": true,
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "lib": ["ESNext"],
    "strictNullChecks": false,
    "baseUrl": "./",                                  /* Specify the base directory to resolve non-relative module names. */
    "paths": {
       "@/*": ["src/*"]
    },                             
  },
  "compileOnSave": true,
  "include": ["src"]
}
